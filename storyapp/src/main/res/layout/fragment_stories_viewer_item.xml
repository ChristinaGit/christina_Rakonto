<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/story_card"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    tools:showIn="@layout/fragment_stories_viewer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/story_preview"
                app:layout_aspectRatio="178%"
                app:layout_widthPercent="100%"/>
        </android.support.percent.PercentFrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/card_content_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/story_name"
                style="?android:textAppearanceListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/card_content_horizontal_margin"
                android:layout_marginStart="@dimen/card_content_horizontal_margin"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/card_primary_text_size"/>

            <TextView
                android:id="@+id/story_text"
                style="?android:textAppearanceListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/card_content_horizontal_margin"
                android:layout_marginStart="@dimen/card_content_horizontal_margin"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@android:color/secondary_text_dark"
                android:textSize="@dimen/card_secondary_text_size"/>

            <LinearLayout
                style="?android:buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/card_action_margin"
                android:layout_marginStart="@dimen/card_action_margin"
                android:layout_marginTop="@dimen/card_action_margin">

                <Button
                    android:id="@+id/share_story"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_share_story"/>

                <Button
                    android:id="@+id/edit_story"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_edit_story"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>