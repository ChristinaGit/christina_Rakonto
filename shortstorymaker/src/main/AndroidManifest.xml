<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.christina.storymaker">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".ShortStoryMaker"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StoriesActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".NewStoryActivity"
            android:windowSoftInputMode="adjustResize"/>

        <provider
            android:name="com.christina.content.story.StoryContentProvider"
            android:authorities="com.christina.provider"
            android:readPermission="com.christina.provider.stories.permission.READ"
            android:writePermission="com.christina.provider.stories.permission.WRITE"/>
    </application>
</manifest>